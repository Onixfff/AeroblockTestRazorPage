@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div id="Table"></div>
</body>

@section Scripts 
{
    <script>

        $(document).ready(function () {

            $('#Table').load("/Home/GetTablePartial")

            $.ajax({
                type: "GET",
                url: "@Url.Action("GetName")",
                dataType: "json",
                success: function (result) {
                    console.log(result);
                },
                error: function (req, status, error) {
                    console.log(status)
                }
            });

            $.ajax({
                type: "POST",
                url: "@Url.Action("PostName")",
                dataType: "json",
                data: { name: "Jannick" },
                success: function (result) {
                    console.log(result);
                },
                error: function (req, status, error) {
                    console.log(status)
                }
            });
        })
    </script>
}
