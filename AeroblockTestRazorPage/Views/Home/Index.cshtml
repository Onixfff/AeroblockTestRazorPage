<link rel="stylesheet" href="~/css/ModelWindow.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div class="panel">
        <div class="panel-header">
            Сортировка
        </div>
        <div class="panel-content">
            <button>Текущий месяц</button>
            <button class="col-md-3">2</button>
            <button class=col-1>3</button>
            <button class=d-md-inline-block>4</button>
        </div>
    </div>

    <div class="modal modal--l" id="modal-1">
        <div class="modal__dialog">
            <div class="modal__dialog-header">
                <div class="modal__dialog-header-content">
                    Modal window 1
                </div>
                <div class="modal__dialog-header-close">
                    <button class="js-modal-close modal__dialog-header-close-btn"><span>&times;</span></button>
                </div>
            </div>
            <div class="modal__dialog-body">
                <div>modal__dialog-body</div>
            </div>
            <div class="modal__dialog-footer">
                <button class="js-modal-close modal__dialog-footer-close-btn">Close</button>
            </div>
        </div>
    </div>

    <div id="Table"></div>
</body>

@section Scripts 
{
    <script>

        $(document).ready(function () {

            $('#Table').load("/Home/GetTablePartial")

            $.ajax({
                type: "GET",
                url: "@Url.Action("GetName")",
                dataType: "json",
                success: function (result) {
                    console.log(result);
                },
                error: function (req, status, error) {
                    console.log(status)
                }
            });

            $.ajax({
                type: "POST",
                url: "@Url.Action("PostName")",
                dataType: "json",
                data: { name: "Jannick" },
                success: function (result) {
                    console.log(result);
                },
                error: function (req, status, error) {
                    console.log(status)
                }
            });
        })
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var panelHeaders = document.querySelectorAll('.panel-header');

            panelHeaders.forEach(function (panelHeader) {
                panelHeader.addEventListener('click', function () {
                    var panelContent = this.nextElementSibling;
                    panelContent.classList.toggle('hidden');
                });
            });
        });
    </script>
}
